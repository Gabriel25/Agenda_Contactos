<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="com.controlsangre.contactos.MainActivity"
    android:id="@+id/main">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/grid_main"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <Button
            android:id="@+id/agregarbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="0"
            android:drawableLeft="@mipmap/ic_launcher_circule"
            android:onClick="onClick"
            android:text="@string/agregar_text" />


        <Button
            android:id="@+id/eliminar_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_column="0"
            android:layout_row="1"
            android:drawableLeft="@mipmap/ic_launcher_basura"
            android:onClick="onEliminar"
            android:text="Eliminar" />

        <Button
            android:id="@+id/listarbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="0"
            android:drawableLeft="@mipmap/ic_launcher_contacto"
            android:onClick="onListar"
            android:text="@string/listar_text" />

        <Button
            android:id="@+id/modificar_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_column="1"
            android:layout_row="1"
            android:drawableLeft="@drawable/abc_spinner_textfield_background_material"
            android:onClick="premodificar"
            android:text="Modificar" />
    </GridLayout>
</RelativeLayout>
